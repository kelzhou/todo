<h1>Events List</h1>

<br>
<h3><span class="glyphicon glyphicon-list"></span> Meetings</h3>
<table class="table table-hover">
 <thead>
 	<tr>
 		<td>Title</td>
 		<td>Description</td>
 		<td>Date</td>
 		<td>Action</td>
 	</tr>
 </thead>
 <tbody>
 	<% @events_meetings.each do |event| %>
 	<% if event.user == current_user %>
 	<tr>
 		<td><%= event.title %></td>
 		<td><%= event.description %></td>
 		<td><%= event.date %></td>
 		<td><%= link_to "Edit", edit_event_path(event.id) %> <%= link_to "Delete", event, method: :delete %></td>

 	</tr>
 	<% end %>
 	<% end %>
 <tbody>
</table>

