<h1>Users List</h1>

<table class="table table-hover">
 <thead>
 	<tr>
 		<td>Name</td>
 		<td>Email</td>
 		<td>Action</td>
 	</tr>
 </thead>
 <tbody>
 	<% @users.each do |user| %>
 	<tr>
 		<td><%= link_to user.name, user_path(user.id) %></td>
 		<td><%= user.email %></td>
 		<% if user == current_user %>
 		<td><%= link_to "Edit", edit_user_registration_path %> <%= link_to "Delete", user, method: :delete %></td>
 		<% else %>
 		<td>Cannot edit other users</td>
 		<% end %>
 	</tr>
 	<% end %>
 </tbody>
</table>

<br/>
<button class="btn btn-default"><%= link_to "New User", new_user_path %></button>
