
<div class="error-msg">
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
</div>

<form class="form-group">
<%= form_for(@user) do |f| %>
 	<div class="field">
    		<p>name</p> 
    		<%= f.text_field :name%>
    	</div>
    	<div class="field">
    		<p>email</p> 
     		<%= f.text_field :email%>
    	</div>
    	<div class="field">
    		<p>password</p> 
     		<%= f.text_field :password%>
    	</div>
    		<div class="actions">
      		<%= f.submit "Create User" , :class => 'btn btn-default'%>
    	</div>
<% end %>
</form>